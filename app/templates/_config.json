{
  "root": {
    "src": "./../../src",
    "dev": "./../../dist",
    "dest": "./../../public",
    "dist": "./../../build"
    <% if( enableJavascript ) { %>,"loaders": "./../../loaders"<% } %>
  },
  <% if( enableJavascript ) { %>
  "loaders": {
    <% if( useBabel ) { %>"babel": "babel"
    <% } else { %>"imports": "imports"<% } %>
  },
  <% } %>

  "options": {
    "cleanFirst": false,
    "reportSizes": false,
    "watch": <%= ( watch ? "true" : "false" ) %>,
    "watchProduction": false
  },

  "tasks": {
    <% if( browserSync ) { %>
    "browserSync": {
      <% if( devServer ) { %>
        <% if( devBrowserOpen ) { %>
      "browser": "<%= devBrowser %>",
        <% } else { %>
      "open": false,
        <% } %>
      "server": {
        "baseDir": "./../../dist"
      }
      <% } %>
    },
    <% } %>

    <% if( enableStaticFiles ) { %>
    "static": {
      "src": "static",
      "dest": "./"
    },
    <% } %>

    <% if( enableJavascript ) { %>
    "js": {
      "src": "javascripts",
      "dest": "javascripts",
      "entries": {
        "app": ["./app.js"]
        <% if( cssPreprocessor === 'sass' && enableStyleguide === true ) { %>
        ,"shared": ["./inject.js"]
        ,"styleguide": ["./styleguide.js"]
        <% } %>
      },
      "extensions": ["js","json"],
      "extractSharedJs": false,
      "hotModuleReplacement": true,
      "deployUncompressed": true
    },
    <% } %>

    <% if( enableStylesheet ) { %>
    "css": {
      "src": "stylesheets",
      "dest": "stylesheets",
      <% if( cssAutoprefixer ) { %>
      "autoprefixer": {
        "browsers": ["last 3 version"]
      },
      <% } %>
      <% if( cssPreprocessor === "sass" ) { %>
      "type": "sass",
      "sass": {
        "indentedSyntax": false
      },
      "extensions": "scss",
      <% } else { %>
      "type": "less",
      "extensions": "less",
      <% } %>
      "excludeFolders": ["app"<% if( cssPreprocessor === "sass" && enableStyleguide === true ) { %>, "shared", "styleguide"<% } %>],
      "deployUncompressed": true
    },
    <% } %>

    <% if( enablePug ) { %>
    "pug": {
      "src": "pug",
      "dest": "./",
      "data": [
        "app/data/global.json"
        <% if( cssPreprocessor === "sass" && enableStyleguide === true ) { %>
        ,"styleguide/data/global.json"
        <% } %>
      ],
      "htmlmin": {},
      "extensions": ["pug", "json"],
      "excludeFolders": ["atomic", "helper", "data"]
    },
    <% } %>

    <% if( enableImages ) { %>
    "images": {
      "src": "images",
      "dest": "images",
      "extensions": ["jpg", "png", "svg", "gif"]
    },
    <% } %>

    <% if( enableFonts ) { %>
    "fonts": {
      "src": "fonts",
      "dest": "fonts",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },
    <% } %>

    <% if( enableIconFont ) { %>
    "iconFont": {
      "src": "icons",
      "dest": "fonts",
      "sassDest": "generated",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },
    <% } %>

    <% if( enableAssetRevisioning ) { %>
    "production": {
      "rev": {
        "src": "./",
        "dest": "./"
      }
    }
    <% } %>
    "null": 0
  }
}
